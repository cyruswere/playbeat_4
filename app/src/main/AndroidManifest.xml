<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cyruswere.playbeat_4">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Playbeat_4">
        <activity
            android:name=".ui.SavedResultListActivity"
            android:exported="true" />
        <activity
            android:name=".ui.SearchActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cyruswere.playbeat_4.ui.WelcomeActivity" />
        </activity>
        <activity
            android:name=".ui.ResultsActivity"
            android:exported="true" />
        <activity
            android:name=".ui.ResultDetailActivity"
            android:exported="true" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cyruswere.playbeat_4.ui.WelcomeActivity" />
        </activity>

        <activity
            android:name=".ui.LogInActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cyruswere.playbeat_4.ui.WelcomeActivity" />
        </activity>
        <activity
            android:name=".ui.SignInActivity"
            android:theme="@style/NoActionBarTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cyruswere.playbeat_4.ui.WelcomeActivity" />
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.WelcomeActivity"
            android:theme="@style/NoActionBarTheme"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>